#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>

int cmp_asc(const void *a, const void *b) { return (*(int*)a - *(int*)b); }
int cmp_desc(const void *a, const void *b) { return (*(int*)b - *(int*)a); }

int main() {
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements: ", n);
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    pid_t pid = fork();

    if(pid < 0) {
        perror("Fork failed");
        exit(1);
    }

    if(pid == 0) {
        // Child process
        qsort(arr, n, sizeof(int), cmp_desc);
        printf("\nChild Process (PID %d): Descending order:\n", getpid());
        for(int i = 0; i < n; i++)
            printf("%d ", arr[i]);
        printf("\n");
    } else {
        // Parent process
        wait(NULL); // wait for child to finish
        qsort(arr, n, sizeof(int), cmp_asc);
        printf("\nParent Process (PID %d): Ascending order:\n", getpid());
        for(int i = 0; i < n; i++)
            printf("%d ", arr[i]);
        printf("\n");
    }

    return 0;
}

•	Orphan
#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>

int main() {
    pid_t pid = fork();

    if(pid < 0) {
        perror("fork failed");
        exit(1);
    }

    if(pid > 0) {
        printf("Parent (PID: %d) exiting now...\n", getpid());
        exit(0);
    } else {
        sleep(3); // Give parent time to die
        printf("Child (PID: %d) now adopted by init (new PPID: %d)\n", getpid(), getppid());
    }
    return 0;
}
•	Zombie
#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>

int main() {
    pid_t pid = fork();

    if(pid < 0) {
        perror("fork failed");
        exit(1);
    }

    if(pid == 0) {
        printf("Child (PID: %d) exiting...\n", getpid());
        exit(0);
    } else {
        printf("Parent (PID: %d) sleeping... Check 'ps' to see zombie child.\n", getpid());
        sleep(10); // parent sleeps, child already exited
        printf("Parent now calling wait() to clean up.\n");
        wait(NULL);
    }

    return 0;
}
 
